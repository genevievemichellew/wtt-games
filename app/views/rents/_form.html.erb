<h2 class="text-center pt-4">New rent for:</h2>
<h2 class="text-center pb-4"> <%= @game.name %></h2>

<%= simple_form_for [@game, @rent] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row justify-content-center">
    <div class="new-forms col-12 col-md-6 col-lg-4 pb-3">
      <%= f.input :start_date, as: :date, html5: true, required: true %>
      <%= f.input :end_date, as: :date, html5: true, required: true %>
    </div>
  </div>

  <div class="form-actions row justify-content-center">
    <%= f.submit "Submit Rent", class: "gradient-btn" %>
  </div>
<% end %>
